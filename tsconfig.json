{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "target": "es5",
    "moduleResolution": "Bundler",
    "noUnusedLocals": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "dist"
  }
}
